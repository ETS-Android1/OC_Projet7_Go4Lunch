<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Go4Lunch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/dark_orange</item>
        <item name="colorPrimaryVariant">@color/dark_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
    </style>

    <style name="DrawerIconStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <!-- STYLE SIGN-IN ACTIVITY -->
    <style name="LoginTheme" parent="Theme.Go4Lunch">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowBackground">@drawable/auth_ui_background</item>
        <item name="colorPrimaryVariant">#00000000</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item> <!-- Disable animations when entering/exiting activity -->
        <item name="android:colorForeground">@color/white</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="FirebaseUI.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@null</item>
        <item name="passwordToggleTint">@color/white</item>
    </style>

    <!-- Dialogs style -->
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorOnPrimary">@color/orange</item>
    </style>

    <!-- FloatingActionButton style -->
    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_margin">20dp</item>
        <item name="android:src">@drawable/ic_baseline_gps_fixed_24dp_dark_grey</item>
        <item name="backgroundTint">@color/white</item>
        <item name="tint">#494949</item>
    </style>

    <style name="FloatingActionButtonValidStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_margin">20dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="maxImageSize">35dp</item>
    </style>

    <!-- Material Button themes -->
    <style name="MaterialButtonThemeGoogle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorPrimary">@color/red</item>
    </style>

    <style name="MaterialButtonThemeFacebook" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorPrimary">@color/blue_facebook_btn</item>
    </style>

    <style name="MaterialButtonThemeTwitter" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorPrimary">@color/blue_twitter_btn</item>
    </style>

    <style name="MaterialButtonThemeSignIn" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorPrimary">@color/orange</item>
    </style>
</resources>