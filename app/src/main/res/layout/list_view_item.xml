<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:gravity="center">

    <GridLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="1"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name"
            android:text="Le Zinc"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginBottom="5dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/address"
            android:text="French - 12 rue du Faubourg PoissonniÃ¨re "
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginBottom="5dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/hour"
            android:text="Open until 7pm"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="2"
            android:layout_column="0"/>
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="1"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/photo_restaurant">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/distance"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right"/>

        <com.google.android.material.textview.MaterialTextView
            android:src="@drawable/ic_baseline_perm_identity_24dp_black"
            android:text="(1)"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            app:drawableLeftCompat="@drawable/ic_baseline_perm_identity_24dp_black"
            android:layout_gravity="right"/>

        <GridLayout
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="5">
            <ImageView
                android:id="@+id/note_star_5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_column="0"
                android:layout_row="0"
                android:visibility="visible"
                android:rotation="180"
                android:rotationX="180"/>
            <ImageView
                android:id="@+id/note_star_4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_column="1"
                android:layout_row="0"
                android:visibility="visible"
                android:rotation="180"
                android:rotationX="180"/>
            <ImageView
                android:id="@+id/note_star_3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_column="2"
                android:layout_row="0"
                android:visibility="visible"
                android:rotation="180"
                android:rotationX="180"/>
            <ImageView
                android:id="@+id/note_star_2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_column="3"
                android:layout_row="0"
                android:visibility="visible"
                android:rotation="180"
                android:rotationX="180"/>
            <ImageView
                android:id="@+id/note_star_1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_column="4"
                android:layout_row="0"
                android:visibility="visible"
                android:rotation="180"
                android:rotationX="180"/>
        </GridLayout>
    </GridLayout>

    <ImageView
        android:id="@+id/photo_restaurant"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>