<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/root_layout_fragment_restaurant_details"
    tools:context=".ui.fragments.restaurants.RestaurantDetailsFragment">

    <ImageView
        android:id="@+id/photo_restaurant"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:contentDescription="@string/content_description_restaurant_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/no_photo_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_baseline_image_not_supported_24dp_oyster_white"
        android:contentDescription="@string/content_description_no_restaurant_photo_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/constraint_layout_restaurant_info" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_restaurant_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/photo_restaurant"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <GridLayout
            android:id="@+id/grid_restaurant_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:columnCount="1"
            android:rowCount="3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/name_restaurant"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginStart="10dp"/>

            <GridLayout
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:rowCount="1"
                android:columnCount="5"
                android:layout_marginStart="10dp">
                <ImageView
                    android:id="@+id/note_star_5"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_column="4"
                    android:layout_row="0"
                    android:visibility="visible"
                    android:rotation="180"
                    android:rotationX="180"
                    tools:ignore="ContentDescription"/>
                <ImageView
                    android:id="@+id/note_star_4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:visibility="visible"
                    android:rotation="180"
                    android:rotationX="180"
                    tools:ignore="ContentDescription"/>
                <ImageView
                    android:id="@+id/note_star_3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:visibility="visible"
                    android:rotation="180"
                    android:rotationX="180"
                    tools:ignore="ContentDescription"/>
                <ImageView
                    android:id="@+id/note_star_2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:visibility="visible"
                    android:rotation="180"
                    android:rotationX="180"
                    tools:ignore="ContentDescription"/>
                <ImageView
                    android:id="@+id/note_star_1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:visibility="visible"
                    android:rotation="180"
                    android:rotationX="180"
                    android:contentDescription="@string/content_description_rating" />
            </GridLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/address_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginStart="10dp"/>
        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_baseline_check_circle_24dp_light_grey"
        android:contentDescription="@string/content_description_selection_fab"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_restaurant"
        app:layout_constraintBottom_toTopOf="@id/constraint_layout_restaurant_info"
        style="@style/FloatingActionButtonValidStyle"/>

    <TableLayout
        android:id="@+id/table_layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraint_layout_restaurant_info">

        <TableRow
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:ignore="UselessParent">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/button_call"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/call"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:drawableTop="@drawable/ic_baseline_call_24dp_orange"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/change_background_color_on_click"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/button_like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/like"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:drawableTop="@drawable/ic_baseline_star_border_24dp_orange"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/change_background_color_on_click"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/button_website"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/website"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:drawableTop="@drawable/ic_baseline_public_24dp_orange"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/change_background_color_on_click"/>
        </TableRow>
    </TableLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_workmates_restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/table_layout_buttons"/>
</androidx.constraintlayout.widget.ConstraintLayout>